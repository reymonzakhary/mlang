{
    "name": "upon/mlang",
    "description": "High-performance multi-language support for Laravel with security enhancements, bulk operations, and intuitive API. Efficiently manage translations with minimal database overhead.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "multilingual",
        "translation",
        "i18n",
        "localization",
        "language",
        "multi-language",
        "eloquent",
        "database",
        "performance"
    ],
    "homepage": "https://github.com/reymonzakhary/mlang",
    "support": {
        "issues": "https://github.com/reymonzakhary/mlang/issues",
        "source": "https://github.com/reymonzakhary/mlang"
    },
    "autoload": {
        "psr-4": {
            "Upon\\Mlang\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Upon\\Mlang\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Reymon Zakhary",
            "email": "reymon@charisma-design.eu",
            "homepage": "https://charisma-design.eu",
            "role": "Developer"
        },
        {
            "name": "Charisma Design",
            "homepage": "https://chd.com.eg"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-filter": "*",
        "illuminate/database": "^10.0|^11.0|^12.0",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Upon\\Mlang\\Providers\\MlangServiceProvider"
            ],
            "aliases": {
                "MLang": "Upon\\Mlang\\Facades\\MLang"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
